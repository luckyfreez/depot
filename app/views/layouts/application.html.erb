<!DOCTYPE html>
<html>
<head>
  <title>Lucky's online book store</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>

<body class="<%= params[:controller] %>-<%= params[:action] %>">
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Lucky Bookshelf" %>
  </div>

  <div id="columns">
    <div id="side">
      <% if @cart %>
        <% hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
          <%= render @cart %>
        <% end %>
      <% end %>

      <a href="/">Home</a><br />
      <a href="http://www.phonetab.com">Our Company</a><br />
      <p><%= Time.now %></p>
      <P><%= "This is your #{@counter} visits. Welcome back." if @counter && @counter >= 5 %></p>

    </div>

    <div id="main">
      <%= yield %>
    </div>
  </div>

</body>
</html>
